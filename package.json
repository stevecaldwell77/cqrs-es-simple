{
    "name": "hebo",
    "description": "Simple Event Sourcing Container",
    "version": "1.0.0",
    "author": "Steve Caldwell <scaldwell@gmail.com>",
    "bugs": {
        "url": "https://github.com/stevecaldwell77/hebo-js/issues",
        "email": "scaldwell@gmail.com"
    },
    "contributors": [
        "Steve Caldwell <scaldwell@gmail.com>"
    ],
    "dependencies": {
        "immer": "^1.7.2",
        "lodash": "^4.17.11"
    },
    "ava": {
        "failFast": true,
        "verbose": true
    },
    "devDependencies": {
        "auto-bind": "^1.1.0",
        "ava": "^0.25.0",
        "casual": "^1.5.19",
        "codecov": "^2.3.0",
        "cross-env": "^5.0.5",
        "eslint": "^4.5.0",
        "eslint-config-prettier": "latest",
        "eslint-plugin-prettier": "latest",
        "git-branch-is": "^2.0.0",
        "husky": "^0.14.3",
        "lint-staged": "^4.0.4",
        "nyc": "^11.1.0",
        "prettier": "^1.6.1",
        "remark-cli": "^4.0.0",
        "remark-preset-github": "^0.0.6",
        "shortid": "^2.2.13",
        "sinon": "^6.3.4",
        "xo": "latest"
    },
    "engines": {
        "node": ">=8.3"
    },
    "homepage": "https://github.com/stevecaldwell77/hebo-js",
    "keywords": [
        "cqrs",
        "event-sourcing",
        "es"
    ],
    "license": "MIT",
    "lint-staged": {
        "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
            "prettier --write",
            "git add"
        ],
        "*.md": [
            "remark . -qfo",
            "git add"
        ]
    },
    "main": "src/index.js",
    "nyc": {
        "check-coverage": true,
        "lines": 100,
        "functions": 100,
        "branches": 100,
        "reporter": [
            "lcov",
            "html",
            "text"
        ]
    },
    "remarkConfig": {
        "plugins": [
            "preset-github"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/stevecaldwell77/hebo-js"
    },
    "prettier": {
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "all",
        "useTabs": false,
        "tabWidth": 4
    },
    "xo": {
        "extends": "prettier",
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "sourceType": "module"
        },
        "rules": {
            "prettier/prettier": "error",
            "max-len": [
                "error",
                {
                    "code": 80,
                    "ignoreUrls": true
                }
            ],
            "capitalized-comments": "off",
            "camelcase": "off",
            "no-warning-comments": "off"
        },
        "space": 4
    },
    "scripts": {
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "lint": "xo && remark . -qfo",
        "precommit": "if git-branch-is master >/dev/null 2>&1; then lint-staged && npm test; else echo \"Not on master, skipping precommit\"; fi",
        "test": "npm run lint && npm run test-coverage",
        "test:watch": "ava --watch",
        "test-coverage": "cross-env NODE_ENV=test nyc ava"
    }
}
